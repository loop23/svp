{
  "name": "LocalVideo",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Video Player with local filesystem - playlist version",
  "icons": {
    "16": "img/icon-16.png",
    "24": "img/icon-24.png",
    "128": "img/icon-128.png"
  },
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": ["unlimitedStorage",
		  // "syncFileSystem",
		  "fullscreen",
		  "http://madre-dam.atcloud.it/",
		  "https://madre-dam.atcloud.it/" ]
}
